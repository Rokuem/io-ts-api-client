{
  "compilerOptions": {
    "lib": ["esnext", "DOM"],
    "target": "es2019",
    "moduleResolution": "node",
    "module": "commonjs",
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "types": ["jest", "node"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "noErrorTruncation": true,
    "outDir": "dist",
    "sourceMap": true,
    "rootDir": "src",
    "pretty": true
  },
  "include": ["src", "jest"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
