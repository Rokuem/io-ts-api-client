{
  "compilerOptions": {
    "lib": ["esnext", "DOM"],
    "target": "es5",
    "moduleResolution": "node",
    "module": "commonjs",
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "types": ["jest", "node"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "noErrorTruncation": true
  },
  "include": ["src", "jest"]
}
